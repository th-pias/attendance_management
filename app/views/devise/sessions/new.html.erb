<div class="col-md-6 col-md-offset-3 login-section">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>Log In With Employee Account</h3>
    </div>
    <div class="panel-body">
      <div class="row session-section">
        <div class="col-md-6 col-md-offset-3 form-section">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name),html:{class:'form-vertical'}) do |f| %>
              <div class="form-group">
                <%= f.label :email, for: "loginemail" %><br />
                <%= f.email_field :email, autofocus: true, id: "loginemail", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :password, for: "loginpass" %><br />
                <%= f.password_field :password, autocomplete: "off", id: "loginpass", class: "form-control" %>
              </div>

              <% if devise_mapping.rememberable? -%>
                  <div class="form-group">
                    <%= f.check_box :remember_me, for: "logincheckbox" %>
                    <%= f.label :remember_me, id: "logincheckbox" %>
                  </div>
              <% end -%>

              <div class="actions">
                <%= f.submit "Log in", class: "btn btn-success" %>
              </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
