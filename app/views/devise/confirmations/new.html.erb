<div class="col-md-6 col-md-offset-3 login-section">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>Resend confirmation instructions</h3>
    </div>
    <div class="panel-body">
      <div class="row session-section">
        <div class="col-md-6 col-md-offset-3 form-section">
          <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "form-vertical" }) do |f| %>
              <%= devise_error_messages! %>

              <div class="form-group">
                <%= f.label :email, for: "confirmemail" %><br />
                <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control", id: "confirmemail" %>
              </div>

              <div class="actions">
                <%= f.submit "Resend confirmation instructions", class: "btn btn-success" %>
              </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

