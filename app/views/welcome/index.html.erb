<div class="row">
  <div class="col-md-3 col-md-offset-3">
    <%= in_out_visualization(@todays_attendances) %>
    <% if notice.present? %>
        <p id="notice"><%= notice %></p>
    <% end %>
  </div>
  <div class="col-md-6">
    <h3><%= current_user.full_name %></h3>
    <h4><%= current_user.email %></h4>
  </div>
</div>
<div class="row">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>Attendance of <%= current_user.full_name %></h3>
    </div>
    <div class="panel-body">
      <table class="table table-responsive">
        <thead>
        <tr>
          <th>Date</th>
          <th>In</th>
          <th>Out</th>
          <th>Duration</th>
        </tr>
        </thead>
        <tbody>
        <% @todays_attendances.each do |attendance| %>
            <tr>
              <td><%= attendance.date %></td>
              <td><%= attendance.intime %></td>
              <td><%= attendance.outtime %></td>
              <td><%= attendance.duration %></td>
            </tr>
        <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>


